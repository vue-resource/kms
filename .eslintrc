{
    "root": true,
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["plugin:vue/base"],
    "plugins": ["vue"],
    "rules": {
        "indent": ["warn", 4, { "SwitchCase": 1 }],
        "quotes": ["warn", "single", { "allowTemplateLiterals": true }],
        "semi": 0,
        "no-empty": 1,
        "comma-spacing": [1, {"before": false, "after": true}],
        "vue/script-indent": ["warn", 4, { "baseIndent": 0, "switchCase": 1}]
    }
}
